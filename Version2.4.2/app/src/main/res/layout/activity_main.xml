<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mhtkarakose.tracknotuhesaplama3.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scScroll"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:text="Quiz 1 Reading :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_q1"
        android:layout_toLeftOf="@+id/txt_q1"
        android:layout_toStartOf="@+id/txt_q1"
        android:layout_alignBottom="@+id/txt_q1" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_q1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

            <TextView
                android:text="Reading Task 1 :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_q1Task1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_q1Task1" />

            <TextView
                android:text="Reading Task 2 :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_q1Task2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_q1Task2" />

            <TextView
                android:text="Quiz 2 Listening :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/tv_q2"
                android:layout_above="@+id/txt_midterm"
                android:layout_toLeftOf="@+id/txt_q1"
                android:layout_toStartOf="@+id/txt_q1" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/tv_q1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txt_q2" />

            <TextView
        android:text="Midterm :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_midterm"
        android:layout_above="@+id/txt_q3"
        android:layout_toLeftOf="@+id/txt_q2"
        android:layout_toStartOf="@+id/txt_q2" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_midterm"
        android:layout_below="@+id/txt_q2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

            <TextView
        android:text="Quiz 3 Writing :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_q3"
        android:layout_toLeftOf="@+id/txt_midterm"
        android:layout_toStartOf="@+id/txt_midterm"
        android:layout_alignBottom="@+id/txt_q3" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/txt_midterm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txt_q3" />

            <TextView
                android:text="Quiz 4 Speaking :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_q4"
                android:layout_above="@+id/txt_final"
                android:layout_toLeftOf="@+id/txt_q4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:ems="10"
                android:layout_below="@+id/txt_q3"
                android:layout_toRightOf="@+id/tv_q3"
                android:layout_toEndOf="@+id/tv_q3"
                android:id="@+id/txt_q4" />

            <TextView
                android:text="Speaking Task 1 :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_q4Task1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_q4Task1" />

            <TextView
                android:text="Speaking Task 2 :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_q4Task2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_q4Task2" />

            <TextView
                android:text="Final Grade :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_final"
                android:layout_above="@+id/txt_wp"
                android:layout_toLeftOf="@+id/txt_wp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_final"
                android:layout_below="@+id/txt_q4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
        android:text="Writing Portfolio :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_writing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txt_wp"
        android:layout_toLeftOf="@+id/txt_final"
        android:layout_toStartOf="@+id/txt_final" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/txt_final"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txt_wp" />

            <TextView
        android:text="IS Portfolio :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_is"
        android:layout_above="@+id/txt_absense"
        android:layout_toLeftOf="@+id/txt_is"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

            <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/txt_wp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/txt_is" />

    <TextView
        android:text="Absence Status :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_absense"
        android:layout_alignBottom="@+id/txt_absense"
        android:layout_toLeftOf="@+id/txt_is"
        android:layout_toStartOf="@+id/txt_is" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_absense"
        android:layout_below="@+id/txt_is"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

            <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/btn_calculate"
        android:layout_alignTop="@+id/txt_ort"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

            <TextView
        android:text="Track Averange :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_alignBaseline="@+id/btn_calculate"
        android:layout_alignBottom="@+id/btn_calculate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_ort"
                android:enabled="false"/>

            <Button
                android:text="Reset "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_reset" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
