<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_kur_average"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mhtkarakose.tracknotuhesaplama3.KurAverage"
    tools:showIn="@layout/activity_kur_average">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Bölüme geçtiğinde yüzde kaç İngilizce ağırlıklı eğitim göreceksin? "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <RadioGroup
                android:id="@+id/radioGrup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:text="Karma bölümler-50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtn_50"
                    />

                <RadioButton
                    android:text="İngilizce ağırlıklı bölümler-65  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtn_65"
                    />

                <RadioButton
                    android:text="İngiliz Dili ve Edebiyatı ve Mütercim Tercümanlık-75"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioBtn_75"
                    />

            </RadioGroup>


            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="5" />

            <TextView
                android:text="Lütfen 3. kurdaki seviyeni seç. "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/rd_kur">

                <RadioButton
                    android:text="Elementary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_Elementary"
                    />

                <RadioButton
                    android:text="Pre intermediate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_preintermediate"
                    />
                <RadioButton
                    android:text="Intermediate  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_Intermediate"
                    />

                <RadioButton
                    android:text="Upper intermediate  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_UpperIntermediate"
                    />
                <RadioButton
                    android:text="Advanced  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd_Advanced"
                    />



            </RadioGroup>

            <TextView
                android:text="Track 1 Ortalama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvi_Track1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_Track1" />

            <TextView
                android:text="Track 2 Average :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Track2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_Track2" />

            <TextView
                android:text="Track 3 Average :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Track3" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_Track3" />

            <TextView
                android:text="Devamsızlık Durumu :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_Abs" />

            <Button
                android:text="Hesapla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_FlatCalculate" />

            <TextView
                android:text="Averange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_FlatAverange" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txt_FlatAverange"
                android:enabled="false"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
